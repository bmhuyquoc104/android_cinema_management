<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filter_city"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/colorPrimary4"
        app:boxStrokeColor="@color/colorPrimary3"
        app:boxStrokeErrorColor="@color/colorPrimary3"
        app:endIconTint="@color/colorPrimary3"
        app:hintTextColor="@color/colorPrimary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="@color/colorPrimary2">

        <AutoCompleteTextView
            android:id="@+id/filter_city_autoTextView"
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_location_city_24"
            android:drawablePadding="15dp"
            android:ems="10"
            android:clickable="false"
            android:hint="@string/filter_city"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filter_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:textColorHint="@color/colorPrimary4"
        app:boxStrokeColor="@color/colorPrimary3"
        app:boxStrokeErrorColor="@color/colorPrimary3"
        app:endIconTint="@color/colorPrimary3"
        app:hintTextColor="@color/colorPrimary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="@color/colorPrimary2">

        <AutoCompleteTextView
            android:id="@+id/filter_review_autoCompleteText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_rate_review_24"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="@string/chooseReview"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/filter_category"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textColorHint="@color/colorPrimary4"
        app:boxStrokeColor="@color/colorPrimary3"
        app:boxStrokeErrorColor="@color/colorPrimary3"
        app:endIconTint="@color/colorPrimary3"
        app:hintTextColor="@color/colorPrimary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="@color/colorPrimary2">

        <AutoCompleteTextView
            android:id="@+id/filter_rate_autoCompleteText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_star_rate_24"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="@string/chooseRate"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/ofd_reset"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorPrimary3"
        android:gravity="center|center_vertical"
        android:text="@string/reset"
        android:textColor="@color/colorPrimary2"
        android:textSize="16sp"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ofd_filters" />

    <Button
        android:id="@+id/ofd_filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorPrimary2"
        android:gravity="center|center_vertical"
        android:text="@string/filter"
        android:textColor="@color/colorPrimary4"
        android:textSize="16sp"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_date" />

    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />
</androidx.constraintlayout.widget.ConstraintLayout>