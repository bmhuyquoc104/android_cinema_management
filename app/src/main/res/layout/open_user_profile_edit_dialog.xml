<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/user_profile_password_til"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_vertical"
        android:textColorHint="@color/colorPrimary4"
        app:boxStrokeColor="@color/colorPrimary"
        app:boxStrokeErrorColor="@color/colorPrimary"
        app:endIconTint="@color/colorPrimary2"
        app:hintTextColor="@color/colorPrimary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorPrimary4"
        app:startIconTint="@color/colorPrimary4">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/user_profile_password_tie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:drawablePadding="15dp"
            android:hint="@string/pleaseEnterCurrentPassword"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary5"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="-16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
        android:id="@+id/open_user_profile_close_button"
        android:layout_width="56dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />

    <Button
        android:id="@+id/user_profile_dialog_save_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/colorPrimary2"
        android:gravity="center|center_vertical"
        android:text="@string/save"
        android:textColor="@color/colorPrimary4"
        android:textSize="16sp"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_dialog_et" />

    <EditText
        android:id="@+id/user_profile_dialog_et"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="172dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/round_login_page"
        android:drawableStart="@drawable/ic_baseline_phone_android_24"
        android:drawablePadding="15dp"
        android:gravity="start|center_vertical"
        android:hint="@string/enter_new"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/colorPrimary4"
        android:textColorHint="@color/colorPrimary4"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompatTextViewDrawableXml" />


</androidx.constraintlayout.widget.ConstraintLayout>