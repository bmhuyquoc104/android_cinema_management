<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".UserManagement.BuyTicketFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:id="@+id/buy_ticket_screen_et"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="304dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimary4"
            android:gravity="start|center_vertical"
            android:hint="Screen"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

        <EditText
            android:id="@+id/buy_ticket_seat_et"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="112dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimary4"
            android:gravity="start|center_vertical"
            android:hint="Seat"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

        <EditText
            android:id="@+id/buy_ticket_point_et"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="208dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_numbers_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimary4"
            android:gravity="start|center_vertical"
            android:hint="Point"
            android:inputType="number"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/buy_by_movie_payment_method_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:boxStrokeColor="@color/colorPrimary3"
            app:boxStrokeErrorColor="@color/colorPrimary3"
            app:endIconTint="@color/colorPrimary2"
            app:hintTextColor="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/colorPrimary2">

            <AutoCompleteTextView
                android:id="@+id/buy_by_movie_payment_method_auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_login_page"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_baseline_loyalty_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Payment Method"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary5"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/buy_by_movie3_next_bt"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/colorPrimary2"
            android:gravity="center|center_vertical"
            android:text="@string/next"
            android:textColor="@color/colorPrimary4"
            android:textSize="16sp"
            app:cornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>