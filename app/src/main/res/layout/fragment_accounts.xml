<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background = "@color/colorPrimary3"
    tools:context=".Accounts">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            app:cardBackgroundColor="@color/colorPrimary3"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/ac_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ac_email"
                    android:textColor="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/ac_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ac_phone"
                    android:textColor="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.286"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/ac_payment_policy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="112dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ac_policy"
                    android:textColor="@color/colorPrimary4"
                    app:drawableEndCompat="@drawable/ic_baseline_emoji_objects_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/ac_security_policy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="152dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ac_security_policy"
                    android:textColor="@color/colorPrimary4"
                    app:drawableEndCompat="@drawable/ic_baseline_emoji_objects_24"
                    app:drawableTint="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/ac_privacy_policy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="192dp"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ac_privacy_policy"
                    android:textColor="@color/colorPrimary4"
                    app:drawableEndCompat="@drawable/ic_baseline_emoji_objects_24"
                    app:drawableTint="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/ac_terms_and_conditions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="232dp"
                    android:drawablePadding="20dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/termAndConditions"
                    android:textColor="@color/colorPrimary4"
                    app:drawableEndCompat="@drawable/ic_baseline_emoji_objects_24"
                    app:drawableTint="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/ac_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:paddingStart="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/ac_address"
                    android:textColor="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="259dp"
            android:layout_height="164dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cinema_app_logo2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="153dp"
            android:layout_height="38dp"
            android:layout_marginTop="112dp"
            android:text="@string/invite"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ac_diamond"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_marginTop="188dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_baseline_diamond_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ac_giftcard"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_marginTop="188dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_baseline_card_giftcard_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.271"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ac_freeAirTicket"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_marginTop="188dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_baseline_airplane_ticket_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ac_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/ac_signIn"
            android:textColor="@color/colorPrimary2"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ac_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:backgroundTint="@color/colorPrimary2"
            android:text="@string/ac_sign_in"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary4"
            app:cornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.725"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:text="@string/ac_giftcard"
            android:textColor="@color/colorPrimary4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:text="@string/Point"
            android:textColor="@color/colorPrimary4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"
            android:text="@string/airTicket"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>