<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary3"
    android:clickable="true"
    android:fillViewport="true"
    android:focusable="true"
    tools:context=".AccountManagement.SignUpFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary3"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag2SignUp_text_layout_dateOfBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/frag2SignUp_dateOfBirth"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_login_page"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:drawableStart="@drawable/ic_baseline_cake_24"
                        android:drawablePadding="10dp"
                        android:ems="10"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center|left"
                        android:hint="@string/dateOfBirth"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag2SignUp_text_layout_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/frag2SignUp_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_home_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/address"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_phone" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag2SignUp_text_layout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/frag2SignUp_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_phone_android_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/phoneNumber"
                        android:inputType="phone"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_gender" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag2SignUp_text_layout_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:startIconTint="@color/colorPrimary2">

                    <AutoCompleteTextView
                        android:id="@+id/frag2SignUp_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_transgender_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/gender"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/buttonContinue"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="375dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:letterSpacing="0.21"
                    android:text="@string/Continue"
                    android:textColor="@color/colorPrimary5"
                    android:textSize="18sp"
                    app:cornerRadius="40dp"
                    app:iconGravity="start"
                    app:iconPadding="4dp"
                    app:iconTint="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>