<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".UserManagement.BuyTicketFragment1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/buy_by_movie_cinema_text_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="110dp"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:boxStrokeColor="@color/colorPrimary3"
            app:boxStrokeErrorColor="@color/colorPrimary3"
            app:endIconTint="@color/colorPrimary2"
            app:hintTextColor="@color/colorPrimary2"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/colorPrimary2">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginTop="110dp"
                android:id="@+id/buy_by_movie_cinema_auto_complete_text"
                android:background="@drawable/round_login_page"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/chooseCinema"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary5"
                android:textSize="16sp"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/buy_ticket_screen_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_live_tv_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimary4"
            android:gravity="start|center_vertical"
            android:hint="@string/screen"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/buy_by_movie_movie_text_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:boxStrokeColor="@color/colorPrimary3"
            app:boxStrokeErrorColor="@color/colorPrimary3"
            app:endIconTint="@color/colorPrimary2"
            app:hintTextColor="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/colorPrimary2">

            <AutoCompleteTextView
                android:id="@+id/buy_by_movie_movie_auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_login_page"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_baseline_movie_filter_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/chooseMovie"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary5"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/buy_by_movie_date_text_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:boxStrokeColor="@color/colorPrimary3"
            app:boxStrokeErrorColor="@color/colorPrimary3"
            app:endIconTint="@color/colorPrimary2"
            app:hintTextColor="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/colorPrimary2">

            <AutoCompleteTextView
                android:id="@+id/buy_by_movie_date_auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_login_page"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/chooseDate"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary5"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth"
                tools:ignore="UnusedAttribute" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/buy_by_movie_time_text_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColorHint="@color/colorPrimary4"
            android:textSize="16sp"
            app:boxStrokeColor="@color/colorPrimary3"
            app:boxStrokeErrorColor="@color/colorPrimary3"
            app:endIconTint="@color/colorPrimary2"
            app:hintTextColor="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconTint="@color/colorPrimary2">

            <AutoCompleteTextView
                android:id="@+id/buy_by_movie_time_auto_complete_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_login_page"
                android:clickable="false"
                android:cursorVisible="false"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/chooseTime"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary5"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth"
                tools:ignore="UnusedAttribute" />

            <Button
                android:id="@+id/buy_by_movie_next_bt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorPrimary2"
                android:gravity="center|center_vertical"
                android:text="@string/next"
                android:textColor="@color/colorPrimary4"
                android:textSize="16sp"
                app:cornerRadius="40dp" />
        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>