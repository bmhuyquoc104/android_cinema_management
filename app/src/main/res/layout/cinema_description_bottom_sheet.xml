<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_top_corners">


    <ImageView
        android:id="@+id/cinemaDescriptionImage"
        android:layout_width="358dp"
        android:layout_height="207dp"
        android:layout_marginTop="68dp"
        android:contentDescription="@string/todo"
        android:scaleType="centerCrop"
        android:src="@drawable/app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cinemaDescriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@drawable/ic_baseline_title_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/cinemaTitle1"
        android:textColor="@color/colorPrimary4"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionImage"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/cinemaDescriptionRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_star_rate_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/rate"
        android:textColor="@color/colorPrimary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionCategory"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/cinemaDescriptionReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_rate_review_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/review"
        android:textColor="@color/colorPrimary4"
        app:drawableTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionRate"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/cinemaDescriptionCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_category_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/category"
        android:textColor="@color/colorPrimary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionTitle"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionCity" />

    <TextView
        android:id="@+id/cinemaDescriptionAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_location_on_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/cinemaAddress"
        android:textColor="@color/colorPrimary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionPhone"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/cinemaDescriptionCity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_location_city_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/cinemaCity"
        android:textColor="@color/colorPrimary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionAddress"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/cinemaDescriptionPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableStart="@drawable/ic_baseline_phone_24"
        android:drawablePadding="20dp"
        android:drawableTint="@color/colorPrimary4"
        android:gravity="center|start"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/cinemaDescriptionPhone"
        android:textColor="@color/colorPrimary4"
        app:drawableTintMode="multiply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cinemaDescriptionReview"
        tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

    <ImageView
        android:id="@+id/cinemaDescriptionClose"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_baseline_close_24"
        android:tint="@color/colorPrimary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseAppTint" />


</androidx.constraintlayout.widget.ConstraintLayout>