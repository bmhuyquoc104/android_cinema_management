<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary3"
    tools:context=".UserManagement.UserProfile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_profile_avatar_iv"
            android:layout_width="140dp"
            android:layout_height="143dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/sample_user_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:id="@+id/user_profile_fullName_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/fullName"
            android:textColor="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/user_profile_date_of_birth_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="540dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_cake_24"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/dateOfBirth"
            android:textColor="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/user_profile_address_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/address"
            android:textColor="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_profile_password_til"
            android:layout_width="332dp"
            android:layout_height="62dp"
            android:layout_marginTop="360dp"

            android:textColorHint="@color/colorPrimary4"
            app:boxStrokeErrorColor="@color/colorPrimary3"
            app:endIconTint="@color/colorPrimary2"
            app:hintTextColor="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary4"
            app:startIconTint="@color/colorPrimary4">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_profile_password_tie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/round_login_page"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary5"
                android:textSize="16sp" />


        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/user_profile_phone_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="630dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/phoneNumber"
            android:textColor="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <TextView
            android:id="@+id/user_profile_email_tv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="270dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/round_login_page"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="15dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/email"
            android:textColor="@color/colorPrimary4"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UseCompatTextViewDrawableXml" />

        <ImageView
            android:id="@+id/user_profile_edit_name_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary2"
            app:layout_constraintBottom_toBottomOf="@+id/user_profile_fullName_tv"
            app:layout_constraintEnd_toEndOf="@+id/user_profile_fullName_tv"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintStart_toStartOf="@+id/user_profile_fullName_tv"
            app:layout_constraintTop_toTopOf="@+id/user_profile_fullName_tv"
            app:layout_constraintVertical_bias="0.466"
            app:srcCompat="@drawable/ic_baseline_note_alt_24"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/user_profile_edit_phone_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:tint="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="@+id/user_profile_phone_tv"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/user_profile_phone_tv"
            app:layout_constraintTop_toBottomOf="@+id/user_profile_date_of_birth_tv"
            app:srcCompat="@drawable/ic_baseline_note_alt_24"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/user_profile_edit_date_of_birth_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:tint="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="@+id/user_profile_date_of_birth_tv"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/user_profile_date_of_birth_tv"
            app:layout_constraintTop_toTopOf="@+id/user_profile_date_of_birth_tv"
            app:srcCompat="@drawable/ic_baseline_note_alt_24"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/user_profile_edit_address_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:tint="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="@+id/user_profile_address_tv"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/user_profile_address_tv"
            app:layout_constraintTop_toTopOf="@+id/user_profile_address_tv"
            app:srcCompat="@drawable/ic_baseline_note_alt_24"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/user_profile_edit_email_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:tint="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="@+id/user_profile_email_tv"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="@+id/user_profile_email_tv"
            app:layout_constraintTop_toTopOf="@+id/user_profile_email_tv"
            app:srcCompat="@drawable/ic_baseline_note_alt_24"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/user_profile_edit_password_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:tint="@color/colorPrimary2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toEndOf="@+id/user_profile_password_til"
            app:layout_constraintTop_toBottomOf="@+id/user_profile_email_tv"
            app:srcCompat="@drawable/ic_baseline_note_alt_24"
            tools:ignore="UseAppTint" />

        <Button
            android:id="@+id/user_profile_reset_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/reset"
            app:cornerRadius="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profile_phone_tv" />

        <Button
            android:id="@+id/user_profile_save_button"
            android:layout_width="0dp"
            android:layout_marginTop="120dp"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/colorPrimary2"
            app:cornerRadius="30dp"
            android:layout_marginEnd="15dp"
            android:text="@string/saveChanges"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profile_phone_tv" />

        <ImageView
            android:id="@+id/user_profile_back_iv"
            android:tint="@color/colorPrimary4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            tools:ignore="UseAppTint" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>