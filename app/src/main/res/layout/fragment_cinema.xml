<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
    android:background = "@color/colorPrimary3"
    tools:context=".CinemaManagement.CinemaFragment">

    <View
        android:id="@+id/view"
        android:layout_width="414dp"
        android:layout_height="57dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/loginAndRegister"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:text="@string/button"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary2"
        app:icon="@drawable/ic_baseline_person_24"
        app:iconGravity="start"
        app:iconPadding="4dp"
        app:iconTint="@color/colorPrimary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="186dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/account"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/app_logo_2"
        tools:ignore="ImageContrastCheck" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cinemaRecyclerView"
        android:layout_width="411dp"
        android:layout_height="445dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/frag_signUp_textLayout_cities"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="209dp"
        android:layout_height="77dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="68dp"
        app:endIconTint="@color/colorPrimary4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconTint="@color/colorPrimary4">

        <AutoCompleteTextView
            android:id="@+id/fragCinema_cities"
            android:layout_width="198dp"
            android:layout_height="57dp"
            android:background="@drawable/round_login_page"
            android:clickable="false"
            android:cursorVisible="false"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimary4"
            android:focusable="false"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/cities"
            android:textColor="@color/colorPrimary4"
            android:textColorHint="@color/colorPrimary5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frag2SignUp_dateOfBirth"
            tools:ignore="UnusedAttribute" />

    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>