<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManagement.AdminManagment.UpdateAndDeleteVoucher">


    <androidx.cardview.widget.CardView
        style="@style/CardView.Light"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary3"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/admin_add_voucher_name_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:background="@drawable/round_login_page"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawablePadding="15dp"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Voucher Name"
                android:textColor="@color/colorPrimary4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />


            <EditText
                android:id="@+id/admin_add_voucher_point_sent_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="104dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/round_login_page"
                android:drawableStart="@drawable/ic_baseline_rate_review_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Voucher Point Require"
                android:textColor="@color/colorPrimary4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

            <EditText
                android:id="@+id/admin_add_voucher_price_sent_et"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/round_login_page"
                android:drawableStart="@drawable/ic_baseline_rate_review_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:gravity="start|center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:hint="Voucher Price"
                android:textColor="@color/colorPrimary4"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />

            <EditText
                android:id="@+id/admin_add_voucher_image_sent_et"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/round_login_page"
                android:drawableStart="@drawable/ic_baseline_rate_review_24"
                android:drawablePadding="15dp"
                android:drawableTint="@color/colorPrimary4"
                android:fadeScrollbars="true"
                android:gravity="start|center_vertical"
                android:hint="Image URL"
                android:isScrollContainer="true"
                android:keepScreenOn="true"
                android:lineSpacingExtra="8sp"
                android:nestedScrollingEnabled="true"
                android:overScrollMode="ifContentScrolls"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:textColor="@color/colorPrimary4"
                android:textColorHint="@color/colorPrimary4"
                android:textSize="16sp"
                android:verticalScrollbarPosition="right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UnusedAttribute,UseCompatTextViewDrawableXml" />
            <Button
                android:id="@+id/admin_update_voucher_update_bt"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="400dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:letterSpacing="0.21"
                android:text="Update"
                android:textColor="@color/colorPrimary5"
                android:textSize="18sp"
                app:cornerRadius="40dp"
                app:iconGravity="start"
                app:iconPadding="4dp"
                app:iconTint="@color/colorPrimary4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/admin_delete_voucher_delete_bt"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="480dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:letterSpacing="0.21"
                android:text="Delete"
                android:textColor="@color/colorPrimary5"
                android:textSize="18sp"
                app:cornerRadius="40dp"
                app:iconGravity="start"
                app:iconPadding="4dp"
                app:iconTint="@color/colorPrimary4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>