<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Footer.CopyRight"
    android:background = "@color/colorPrimary3">

    <ImageView
        android:id="@+id/back"
        android:layout_width="62dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_keyboard_return_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo"/>

    <TextView
        android:id="@+id/copyRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text="Copy Right"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor ="@color/colorPrimary2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/copyRight"
        android:layout_marginTop="20dp"
        android:src="@drawable/app_logo_2"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:text="Company Universal Vietnam"
        android:textSize="20sp"
        android:textColor ="@color/colorPrimary4"
        app:layout_constraintTop_toBottomOf="@id/logo" />

    <TextView
        android:id="@+id/companyContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:text="Company Content"
        android:textSize="15sp"
        android:textColor ="@color/colorPrimary4"
        app:layout_constraintTop_toBottomOf="@id/company" />

</androidx.constraintlayout.widget.ConstraintLayout>