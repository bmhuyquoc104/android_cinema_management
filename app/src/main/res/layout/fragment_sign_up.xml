<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary3"
    android:clickable="true"
    android:focusable="true"
    tools:context=".AccountManagement.SignUpFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            style="@style/CardView.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary3"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            app:contentPadding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag1SignUp_textLayout_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:boxStrokeColor="@color/colorPrimary3"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/frag1SignUp_fullName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/fullName"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag1SignUp_textLayout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorPrimary4"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/frag1SignUp_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="16sp"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag1SignUp_textLayout_confirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="280dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorPrimary4"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fgSignUp_confirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/confirmPassword"
                        android:inputType="textPassword"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/frag1SignUp_textLayout_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:textColorHint="@color/colorPrimary4"
                    app:boxStrokeColor="@color/colorPrimary3"
                    app:endIconTint="@color/colorPrimary2"
                    app:hintTextColor="@color/colorPrimary2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:boxStrokeErrorColor="@color/colorPrimary3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:startIconTint="@color/colorPrimary2">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/frag1SignUp_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_login_page"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:drawablePadding="15dp"
                        android:ems="10"
                        android:hint="@string/email"
                        android:importantForAutofill="no"
                        android:inputType="textEmailAddress"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorPrimary4"
                        android:textColorHint="@color/colorPrimary5"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/frag1SignUp_fullName" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/fgSignUp_continueButton"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="364dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:letterSpacing="0.21"
                    android:text="@string/Continue"
                    android:textColor="@color/colorPrimary5"
                    android:textSize="17sp"
                    app:cornerRadius="40dp"
                    app:iconGravity="start"
                    app:iconPadding="4dp"
                    app:iconTint="@color/colorPrimary4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>